generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["queryCompiler", "driverAdapters"] // allows bundling, won't use rust binaries
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Color {
  id   String  @id @default(cuid())
  name String  @unique
  hex  String?

  @@map("colors")
}

model Customer {
  id            String @id @default(cuid())
  name          String
  cpf           String @unique
  email         String @unique
  favoriteColor String

  @@map("customers")
}
